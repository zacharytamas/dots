[machete "status"]
  extraSpaceBeforeBranchName = true

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --label \"$(pwd)\" --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false
  trustExitCode = true
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[diff]
  tool = Kaleidoscope

[merge]
  tool = Kaleidoscope
